<h1>Add workout</h1>

<%= form_for @workout do |f| %>
  <p>
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :duration %>
    <%= f.time_select :duration %>
  </p>
  <p>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  <%= f.submit "Add", :class => "btn" %>
<% end %>